<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/verde_logo_lfa</item>
        <item name="colorPrimaryDark">@color/verde_logo_lfa</item>
        <item name="colorAccent">@color/rojo_logo_lfa</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/blanco</item>

    </style>

    <!-- Mayas -->
    <style name="MayasTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/azul_maya</item>
        <item name="colorAccent">@color/blanco</item>
    </style>

    <style name="EaglesTheme">
        <item name="colorPrimary">@color/rojo_aguila</item>
        <item name="colorAccent">@color/blanco</item>
    </style>

    <style name="CondorsTheme" >
        <item name="colorPrimary">@color/negro</item>
        <item name="colorAccent">@color/dorado_condor</item>
    </style>

    <style name="RaptorsTheme">
        <item name="colorAccent">@color/dorado_raptor</item>
        <item name="colorPrimary">@color/verde_raptor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
